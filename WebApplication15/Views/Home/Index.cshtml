@model IEnumerable<WebApplication15.Models.Post>
@{
    ViewData["Title"] = "Home Page";
}

    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/images/111.jpg" alt="First slide">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Hello Word</h5>
                    <p>Welcom to Aleppo City</p>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/images/222.jpg" alt="Second slide">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Hello Word</h5>
                    <p>Welcom to Homs City</p>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/images/333.png" alt="Third slide">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Hello Word</h5>
                    <p>Welcom to Idleb City</p>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
<div>
    <p></p>
</div>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 text-center">
            <div class="thumbnail">
                <img class="img-rounded" width="350px" height="236px" src="@Url.Content("~/" + WebApplication15.Properties.Resources.ImgFolder + "/" + item.UrlImage)" />
                <div class="caption">
                    <h3>
                        <a asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Subject)</a>

                    </h3>


                    @*@Html.Raw(item.Body)*@


                    @Html.Raw(String.Concat(item.Body.Take(550)));

                    <a asp-action="Details" asp-route-id="@item.Id">المزيد</a>
                </div>
            </div>
        </div>
    }

</div>